{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "#types": ["./shared/types"],
      "#types/*": ["./shared/types/*"],
      "#utility": ["./shared/utility"],
      "#utility/*": ["../shared/utility/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "renderer/next.config.js",
    "nextron.config.js",
    "app",
    "dist"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
